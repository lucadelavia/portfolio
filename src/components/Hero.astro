<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8rem 2rem 4rem;
    position: relative;
    background: 
      radial-gradient(circle at 20% 20%, rgba(96, 165, 250, 0.1), transparent 60%),
      radial-gradient(circle at 80% 80%, rgba(251, 191, 36, 0.05), transparent 50%);
  }

  .hero-content {
    max-width: var(--max-width);
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-text {
    animation: slideInLeft 0.8s ease-out;
  }

  .hero-greeting {
    display: block;
    color: var(--text-secondary);
    font-size: 1.2rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .hero-name {
    display: block;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    background: linear-gradient(135deg, var(--text-primary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    margin: 0;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }

  .highlight {
    color: var(--accent);
    font-weight: 600;
  }

  .hero-description {
    color: var(--text-muted);
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--accent);
    color: var(--bg);
  }

  .btn-primary:hover {
    background: #93c5fd;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(96, 165, 250, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--accent);
    border-color: var(--accent);
  }

  .btn-secondary:hover {
    background: var(--accent-soft);
    transform: translateY(-2px);
  }

  .hero-social {
    display: flex;
    gap: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    padding: 0.75rem 1rem;
    border-radius: 10px;
    background: var(--surface-muted);
    border: 1px solid var(--border);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(96, 165, 250, 0.2);
  }

  .hero-visual {
    animation: slideInRight 0.8s ease-out;
  }

  .code-block {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(5, 7, 15, 0.3);
  }

  .code-header {
    background: var(--surface-soft);
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    border-bottom: 1px solid var(--border);
  }

  .code-dots {
    display: flex;
    gap: 0.5rem;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .dot.red { background: #ef4444; }
  .dot.yellow { background: #f59e0b; }
  .dot.green { background: #10b981; }

  .code-title {
    color: var(--text-secondary);
    font-size: 0.85rem;
  }

  .code-content {
    padding: 1.5rem;
    font-family: 'Fira Code', 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .code-keyword { color: #c678dd; }
  .code-class { color: #e06c75; }
  .code-type { color: #61afef; }
  .code-string { color: #98c379; }
  .code-method { color: #56b6c2; }
  .code-comment { color: var(--text-muted); }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }

  .scroll-arrow {
    width: 20px;
    height: 20px;
    border-bottom: 2px solid var(--accent);
    border-right: 2px solid var(--accent);
    transform: rotate(45deg);
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 6rem 1.5rem 3rem;
    }

    .hero-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: center;
    }

    .hero-visual {
      order: -1;
    }

    .hero-actions {
      justify-content: center;
      flex-wrap: wrap;
    }

    .hero-social {
      justify-content: center;
      flex-wrap: wrap;
    }

    .code-content {
      font-size: 0.75rem;
    }
  }
</style>