<style>
  .navigation {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(139, 92, 246, 0.1);
    transition: all 0.3s ease;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .nav-toggle {
    position: absolute;
    right: 2rem;
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 4px;
  }

  .hamburger {
    width: 20px;
    height: 2px;
    background: var(--text-primary);
    transition: all 0.3s ease;
  }

  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.5rem;
    justify-content: center;
  }

  .nav-link {
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    padding: 0.75rem 1rem;
    position: relative;
    transition: all 0.3s ease;
    letter-spacing: 0.01em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 6px;
  }

  .nav-link svg {
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--accent);
    background: rgba(139, 92, 246, 0.1);
  }

  .nav-link:hover svg,
  .nav-link.active svg {
    opacity: 1;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: 6px;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .theme-toggle:hover {
    background: rgba(139, 92, 246, 0.1);
    border-color: var(--accent);
    color: var(--accent);
  }

  .btn-resume {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: var(--accent);
    color: var(--bg);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    border: 1px solid var(--accent);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .btn-resume:hover {
    background: var(--accent-hover);
    border-color: var(--accent-hover);
    transform: translateY(-1px);
    box-shadow: 0 8px 20px rgba(139, 92, 246, 0.4);
  }

  .btn-resume svg {
    transition: transform 0.3s ease;
  }

  .btn-resume:hover svg {
    transform: translateY(2px);
  }

  @media (max-width: 968px) {
    .nav-container {
      padding: 0.75rem 1.5rem;
      gap: 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.85rem;
      padding: 0.5rem 0.75rem;
    }

    .nav-link span {
      display: none;
    }

    .btn-resume {
      padding: 0.45rem 1rem;
      font-size: 0.8rem;
    }

    .btn-resume span {
      display: none;
    }

    .btn-resume svg {
      margin: 0;
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0.75rem 1.5rem;
      justify-content: center;
    }

    .nav-toggle {
      right: 1.5rem;
      display: flex;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(5, 7, 15, 0.98);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(148, 163, 196, 0.1);
      flex-direction: column;
      padding: 1.5rem 2rem;
      gap: 0;
      transform: translateY(-100%);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .nav-links.open {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    .nav-link {
      padding: 1rem;
      border-bottom: 1px solid rgba(148, 163, 196, 0.1);
      font-size: 0.9rem;
      justify-content: flex-start;
      border-radius: 0;
    }

    .nav-link span {
      display: inline;
    }

    .nav-link:last-child {
      border-bottom: none;
    }

    .nav-actions {
      gap: 0.5rem;
    }

    .theme-toggle {
      width: 36px;
      height: 36px;
    }

    .brand-avatar {
      width: 36px;
      height: 36px;
    }

    .brand-name {
      font-size: 0.95rem;
    }

    .brand-subtitle {
      font-size: 0.65rem;
    }

    .btn-resume {
      padding: 0.5rem 0.75rem;
    }

    .btn-resume span {
      display: inline;
    }

    .nav-toggle[aria-expanded="true"] .hamburger:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .nav-toggle[aria-expanded="true"] .hamburger:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle[aria-expanded="true"] .hamburger:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }
  }
</style>