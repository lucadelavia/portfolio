<style>
  .projects {
    padding: 6rem 2rem;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .projects-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .accent {
    color: var(--accent);
  }

  .section-subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .project-card {
    background: var(--surface);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--border);
    transition: all var(--transition-smooth);
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(139, 92, 246, 0.2);
    border-color: var(--accent);
  }

  .project-image-bg {
    height: 220px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .project-image {
    background: linear-gradient(135deg, var(--surface-soft), var(--surface-muted));
    padding: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    height: 220px;
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(17, 17, 27, 0.7) 0%,
      rgba(17, 17, 27, 0.9) 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-smooth);
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-icon {
    width: 72px;
    height: 72px;
    background: var(--accent-soft);
    border: 2px solid var(--accent);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    transition: all var(--transition-smooth);
  }

  .project-card:hover .project-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .project-status {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    z-index: 10;
  }

  .project-status.in-development {
    background: rgba(139, 92, 246, 0.2);
    color: #a78bfa;
    border: 1px solid #a78bfa;
  }

  .project-status.live {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
    border: 1px solid #10b981;
  }

  .project-status.conceptual {
    background: rgba(245, 158, 11, 0.2);
    color: #f59e0b;
    border: 1px solid #f59e0b;
  }

  .project-content {
    padding: 1.75rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 340px;
  }

  .project-title {
    color: var(--text-primary);
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: auto;
    font-size: 0.95rem;
    min-height: 4.5rem;
  }

  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1.5rem 0;
  }

  .tech-badge {
    background: var(--surface-soft);
    color: var(--text-secondary);
    padding: 0.35rem 0.75rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 500;
    border: 1px solid var(--border);
    transition: all var(--transition-smooth);
  }

  .tech-badge:hover {
    background: var(--accent-soft);
    border-color: var(--accent);
    color: var(--accent);
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .btn-primary,
  .btn-secondary {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-smooth);
    cursor: pointer;
  }

  .btn-primary {
    background: var(--accent);
    color: var(--bg);
    border: 2px solid var(--accent);
  }

  .btn-primary:hover {
    background: #a78bfa;
    border-color: #a78bfa;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(139, 92, 246, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-primary);
    border: 2px solid var(--border);
  }

  .btn-secondary:hover {
    background: var(--surface-soft);
    border-color: var(--accent);
    color: var(--accent);
    transform: translateY(-2px);
  }

  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .section-title {
      font-size: 2.4rem;
    }
  }

  @media (max-width: 768px) {
    .projects {
      padding: 4rem 1.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .project-image-bg {
      height: 220px;
    }

    .project-content {
      padding: 1.5rem;
    }

    .project-title {
      font-size: 1.2rem;
    }

    .btn-primary,
    .btn-secondary {
      font-size: 0.85rem;
      padding: 0.65rem 1rem;
    }
  }
</style>